<% include header %> 
    <div class="container-fluid d-flex justify-content-center">
        <form class=" w-75 bg-light p-5" >
            <div class="form-group row">
                <div class="col-sm-8 offset-sm-2">
                    <input type="text" class="form-control text-capitalize" id="inputperson" placeholder="player's name">
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" onclick="addPlayer()">+</button>
                </div>
            </div>
            <div class="w-75 offset-sm-2">
                <ul class="list-group list-group-flush" id = "inputlist">
                </ul>
            </div>
            <div class="form-group row offset-sm-2">
                <div class="col-lg-2">
                    <a class="btn btn-primary active" role="button" aria-pressed="true" onclick="store('<%=category%>')" id = "done">Done</a>
                </div> 
                <div id="donediv" class = " col-lg-10" ></div>
            </div>
        </form>
    </div>

<% include scripts %> 
<script>
    if(gotten.length > 0){
          gotten.forEach((item)=> {
          addInput(item.name)
      })
  }
</script>       
